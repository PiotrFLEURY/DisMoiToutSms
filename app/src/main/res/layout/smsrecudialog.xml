<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smsrecu_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".SmsRecuActivity">

    <ScrollView
        android:id="@+id/smsrecu_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16sp">

            <LinearLayout
                android:id="@+id/smsrecu_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="16sp">

                <ImageView
                    android:id="@+id/smsrecucontactphoto"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:layout_margin="4sp"
                    android:background="@drawable/colorcircle"
                    android:padding="8sp"
                    android:src="@drawable/ic_person_24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Coucou Ã§a va ?"
                        android:padding="8sp"
                        android:background="@drawable/smsbackground"
                        android:textColor="@color/grey800"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/tv_contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark"
                        tools:text="Stephane domortier"/>

                </LinearLayout>


            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_sending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="invisible"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>

            <TextView
                android:id="@+id/tv_reponse_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Impecable et toi ? Qu'est-ce que tu racontes ? Toujours ok pour demain ?Impecable et toi ? Qu'est-ce que tu racontes ? Toujours ok pour demain ?Impecable et toi ? Qu'est-ce que tu racontes ? Toujours ok pour demain ?Impecable et toi ? Qu'est-ce que tu racontes ? Toujours ok pour demain ?Impecable et toi ? Qu'est-ce que tu racontes ? Toujours ok pour demain ?Impecable et toi ? Qu'est-ce que tu racontes ? Toujours ok pour demain ?"
                android:background="@drawable/smsbackground"
                android:textColor="@color/grey800"
                android:textSize="20sp"
                android:layout_margin="16sp"
                android:padding="8sp"/>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sms_recu_fragment_container"/>

</android.support.design.widget.CoordinatorLayout>