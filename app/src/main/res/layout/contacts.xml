<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactSelectionActivity">

    <!--<android.support.v7.widget.CardView-->
        <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
        <!--card_view:cardCornerRadius="0dp"-->
        <!--card_view:cardElevation="8sp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/action_bar"
                tools:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:orientation="horizontal"
                android:background="@color/blue700"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/back_main_btn"
                    android:layout_width="48sp"
                    android:layout_height="match_parent"
                    android:padding="8sp"
                    android:layout_gravity="center_vertical"
                    android:onClick="back"
                    android:background="@drawable/selectable_background"
                    android:src="@drawable/ic_arrow_back_white_48dp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/selectioncontacttitle"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/ic_search"
                    android:layout_gravity="center_vertical|right"
                    android:padding="8sp"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:background="@drawable/selectable_background"
                    android:src="@drawable/ic_search_white_24dp"/>


            </FrameLayout>

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:visibility="invisible"
                tools:visibility="visible"
                android:paddingLeft="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/recherchercontact"
                android:textColorHint="@color/white"
                android:background="@color/cardview_dark_background"
                android:textColor="@color/white"
                android:singleLine="true" />

        </FrameLayout>
    <!--</android.support.v7.widget.CardView>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0sp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/contacts_menu_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:visibility="gone"
            tools:visibility="visible"
            android:alpha="0.8"
            android:src="@color/black"/>

            <LinearLayout
                android:id="@+id/btn_delete_all"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="64sp"
                android:layout_gravity="bottom|right"
                android:gravity="center_vertical|right"
                android:layout_marginBottom="160sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/white"
                    android:layout_marginRight="16sp"
                    android:text="@string/supprimerTousLesContacts"/>

                <ImageView
                    android:onClick="deleteAll"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:layout_marginRight="24sp"
                    android:background="@drawable/circularbutton"
                    android:padding="8sp"
                    android:elevation="8sp"
                    android:src="@drawable/ic_close_white_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_add_all"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="64sp"
                android:layout_gravity="bottom|right"
                android:gravity="center_vertical|right"
                android:layout_marginBottom="96sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/white"
                    android:layout_marginRight="16sp"
                    android:text="@string/ajouterTousLesContacts"/>

                <ImageView
                    android:onClick="addAll"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:layout_marginRight="24sp"
                    android:background="@drawable/circularbutton"
                    android:padding="8sp"
                    android:elevation="8sp"
                    android:src="@drawable/ic_add_white_24dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/btn_more"
                android:onClick="toggleMenu"
                android:layout_width="64sp"
                android:layout_height="64sp"
                android:background="@drawable/circularbutton"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16sp"
                android:layout_marginBottom="16sp"
                android:padding="16sp"
                android:elevation="8sp"
                android:src="@drawable/ic_more_vert_white_24dp"/>



    </FrameLayout>


</LinearLayout>