<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".DisMoiToutSmsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="horizontal"
        android:background="@color/blue700"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="16sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selectable_background"
            android:src="@drawable/ic_menu_white_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </FrameLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0sp">

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="240sp"
            android:layout_height="240sp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_deactivate_48dp"/>

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/status_icon"
            android:textSize="24sp"
            android:textColor="@color/red500"
            android:text="@string/deactivated"/>

    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="16sp"
        android:paddingLeft="16sp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:tint="@color/blue700"
            android:src="@drawable/ic_music_note_black_24dp"/>

        <SeekBar
            android:id="@+id/volumeSeekTab"
            android:layout_width="match_parent"
            android:layout_height="24sp"
            style="@style/CustomProgressBarHorizontal"
            android:progress="75"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingBottom="16sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_activate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:checked="true"
                android:background="@drawable/graybutton"
                android:drawableLeft="@drawable/ic_activate_24dp"
                android:gravity="center_vertical"
                android:layout_margin="4sp"
                android:text="@string/activate"/>

            <TextView
                android:id="@+id/btn_deactivate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/graybutton"
                android:drawableLeft="@drawable/ic_deactivate_24dp"
                android:gravity="center_vertical"
                android:layout_margin="4sp"
                android:text="@string/deactivate"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
