<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="800"
    android:exitFadeDuration="100">

    <item android:state_checked="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <size android:width="16sp" android:height="16sp"/>
            <corners android:radius="2sp" />
            <stroke android:color="@color/grey400" android:width="1sp"/>
        </shape>
    </item>

    <item android:state_checked="true" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="16sp" android:height="16sp"/>
                    <corners android:radius="2sp" />
                    <solid android:color="@color/green500" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_done_16dp"/>
        </layer-list>
    </item>

</selector>