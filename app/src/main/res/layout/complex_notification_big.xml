<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16sp">

        <ImageView
            android:id="@+id/complex_notification_icon"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:src="@drawable/iconeprincipale"/>

        <LinearLayout
            android:id="@+id/complex_notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:layout_marginStart="16sp"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Notification.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_notif_titre"
                android:textStyle="bold" />

            <TextView
                style="@style/TextAppearance.AppCompat.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_notif_texte" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/complex_notification_btn_new_message"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="48sp"
            android:padding="8sp"
            android:tint="@color/grey600"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/ic_message_white_48dp"/>

        <ImageView
            android:id="@+id/complex_notification_btn_off"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="48sp"
            android:padding="8sp"
            android:tint="@color/grey600"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/ic_volume_off_white_48dp"/>
    </LinearLayout>

</LinearLayout>