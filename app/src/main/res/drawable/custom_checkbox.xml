<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="800"
    android:exitFadeDuration="100">

    <item android:state_checked="false" android:state_pressed="false">
        <layer-list>
            <item android:left="16sp" android:right="16sp" android:top="8sp" android:bottom="8sp">
                <shape android:shape="rectangle">
                    <corners android:radius="4sp" />
                    <solid android:color="@color/red500" />
                </shape>
            </item>
            <item android:left="16sp" android:right="16sp" android:top="8sp" android:bottom="8sp">
                <bitmap android:src="@drawable/ic_close_white_24dp" />
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true" android:state_pressed="false">
        <layer-list>
            <item android:left="16sp" android:right="16sp" android:top="8sp" android:bottom="8sp">
                <shape android:shape="rectangle">
                    <corners android:radius="4sp" />
                    <solid android:color="@color/green500" />
                </shape>
            </item>
            <item android:left="16sp" android:right="16sp" android:top="8sp" android:bottom="8sp">
                <bitmap android:src="@drawable/ic_done_white_24dp" />
            </item>
        </layer-list>
    </item>

</selector>